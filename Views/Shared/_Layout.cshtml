<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>TDX CX Hub - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/fontawesome/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebUI.Core.Mvc.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Shared/layout.css" asp-append-version="true"/>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm "
             style="height: 60px; background-color: #0000BF; margin: 0px 0px 0px 0px; padding: 18px 0px 0px 10px; color: white; font-family: Mukta Mahee,Helvetica Neue,Arial,sans-serif; font-weight: bold">
            <span class="align-middle">&nbsp;&nbsp;&nbsp; TDC Partner Hub</span>
        </div>
        <div class="col-sm text-end"
             style="height: 60px; background-color: #0000BF; margin: 0px 10px 0px 0px; padding: 18px 0px 0px 0px; color: white; font-family: Mukta Mahee,Helvetica Neue,Arial,sans-serif; font-weight: bold">
            l
        </div>
    </div>
    <div class="d-flex flex-row" style="height:90vh; margin: 0px 0px 0px 0px; padding: 0px 0px 0px 0px">
        <div id="mainMenu"
             style="width: 200px; border-right: 1px solid lightgrey; margin:0px 0px 0px 0px; padding:20px 0px 0px 0px;height: 150%">
            <div class="menuItems"><a class="menuItems" asp-area="" asp-controller="Home" asp-action="Overview">&nbsp;<i
                        class="fa fa-home"></i>&nbsp;&nbsp;Overview</a>
            </div>

            <hr/>
            <div class="text-uppercase menuHeaders">Management</div>
            <div class="menuItems"><a class="menuItems" asp-area="" asp-controller="Management" asp-action="Customers">&nbsp;<i
                        class="fa fa-user"></i>&nbsp;&nbsp;Customers</a></div>
            <div class="menuItems"><a class="menuItems" asp-area="" asp-controller="Management"
                                      asp-action="Administrators">&nbsp;<i
                        class="fa fa-users"></i>&nbsp;&nbsp;Administrators</a></div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Management"
                                            asp-action="Account"><i class="fa fa-building"></i>&nbsp;&nbsp;Account</a>
            </div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Management"
                                            asp-action="OrganizationSettings"><i class="fa fa-copy"></i>&nbsp;&nbsp;Organization
                    settings</a></div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Management"
                                            asp-action="OrganizationSettings"><i class="fa fa-copy"></i>&nbsp;&nbsp;Organization
                settings</a></div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Management"
                                            asp-action="Resources"><i class="fa fa-copy"></i>&nbsp;&nbsp;Resources & help
                    </a></div>

            <hr/>
            <div class="text-uppercase menuHeaders">Services</div>
            <div class="menuItems"><a id="menuSurvey" class="menuItems" asp-area="" asp-controller="Service"
                                      asp-action="ContactCenter">&nbsp;<i class="fa fa-headphones"></i>&nbsp;&nbsp;Services</a></div>

            <hr/>
            <div class="text-uppercase menuHeaders">Monitoring</div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Monitoring"
                                            asp-action="Reports"><i class="fa fa-paragraph"></i>&nbsp;&nbsp;Reports</a>
            </div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Monitoring"
                                            asp-action="Analysis"><i class="fa fa-plug"></i>&nbsp;&nbsp;Analysis</a>
            </div>
            
            <hr/>
            <div class="text-uppercase menuHeaders">Account</div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Home" asp-action="Login"><i
                        class="fa fa-sign-out"></i>&nbsp;&nbsp;Sign out</a></div>
        </div>
        <div style="margin: 0px 0px 0px 0px; padding: 18px 0px 0px 10px;"> @RenderBody()</div>
    </div>
</div>
@* <script type="text/javascript" src="https://alcdn.msauth.net/browser/2.8.0/js/msal-browser.min.js"></script> *@

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
