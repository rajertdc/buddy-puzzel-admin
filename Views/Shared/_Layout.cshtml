
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>TDX AdminHub - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm "
             style="height: 60px; background-color: #0000BF; margin: 0px 0px 0px 0px; padding: 18px 0px 0px 10px; color: white; font-family: Mukta Mahee,Helvetica Neue,Arial,sans-serif; font-weight: bold">
            <span class="align-middle">&nbsp;&nbsp;&nbsp; CX - Customer Experience Portal</span>
        </div>
        <div class="col-sm text-end"
             style="height: 60px; background-color: #0000BF; margin: 0px 10px 0px 0px; padding: 18px 0px 0px 0px; color: white; font-family: Mukta Mahee,Helvetica Neue,Arial,sans-serif; font-weight: bold">
            l
        </div>
    </div>
    <div class="d-flex flex-row" style="height:90vh; margin: 0px 0px 0px 0px; padding: 0px 0px 0px 0px">
        <div id="mainMenu"
             style="width: 250px; border-right: 1px solid lightgrey; margin:0px 0px 0px 0px; padding:20px 0px 0px 0px;height: 150%">
            <div class="menuItems"><a class="menuItems" asp-area="" asp-controller="Admin" asp-action="Overview"><i>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16" style="margin-bottom: 5px; margin-right: -10px; margin-left: 5px">
                        <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                    </svg>
                </i>&nbsp;&nbsp;&nbsp;Oversigt</a>
            </div>

            <hr/>
            <div class="text-uppercase menuHeaders">Administration</div>
            
            <div class="menuItems"><a class="menuItems" asp-area="" asp-controller="Admin"
                                      asp-action="Administrators">&nbsp;<i
                        class="fa fa-users"></i>&nbsp;Administratorer</a></div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Admin"
                                            asp-action="Account"><i class="fa fa-user-o"></i>&nbsp;&nbsp;Konto</a>
            </div>
            @RenderSection("CustomerSites", required: false)
            @RenderSection("Catalogs", required: false)
            
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Admin"
                                            asp-action="OrgSettings"><i class="fa fa-building-o"></i>&nbsp;&nbsp;Organisationsindstillinger</a></div>
            
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Admin"
                                            asp-action="Resources"><i class="fa fa-book"></i>&nbsp;&nbsp;Resurser og hjælp
                    </a></div>

            <hr/>
            <div class="text-uppercase menuHeaders">Services</div>
            <div class="menuItems"><a id="menuSurvey" class="menuItems" asp-area="" asp-controller="Services"
                                      asp-action="Licenses">&nbsp;<i class="fa fa-key"></i>&nbsp;&nbsp;Licenser</a></div>

            <hr/>
            <div class="text-uppercase menuHeaders">Overvågning</div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Monitoring"
                                            asp-action="Reports"><i class="fa fa-sticky-note-o"></i>&nbsp;&nbsp;Rapporter</a>
            </div>
            <div class="menuItems">&nbsp;<a class="menuItems" asp-area="" asp-controller="Monitoring"
                                            asp-action="Analysis"><i class="fa fa-bar-chart-o"></i>&nbsp;Analyse</a>
            </div>
            
            <hr/>
            <div class="text-uppercase menuHeaders">Konto</div>
            <div class="menuItems"><a class="menuItems" asp-area="" asp-controller="Auth" asp-action="SignOut">
                <button type="button" class="btn btn-danger" style="margin: 10px; margin-left: 0px">Log ud</button>
            </a>
            </div>
        </div>
        <div style="margin: 0px 0px 0px 0px; padding: 18px 0px 0px 10px;"> @RenderBody()</div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
